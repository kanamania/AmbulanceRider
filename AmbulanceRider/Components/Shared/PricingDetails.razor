@using AmbulanceRider.Models

<div class="mb-6 p-4 bg-gray-50 rounded-lg">
    <h3 class="text-lg font-semibold mb-3">Pricing Details</h3>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
            <label class="block text-gray-700 text-sm font-bold mb-2">Weight (kg)</label>
            <InputNumber @bind-Value="Weight" class="w-full px-3 py-2 border rounded" />
        </div>
        <div>
            <label class="block text-gray-700 text-sm font-bold mb-2">Height (cm)</label>
            <InputNumber @bind-Value="Height" class="w-full px-3 py-2 border rounded" />
        </div>
        <div>
            <label class="block text-gray-700 text-sm font-bold mb-2">Length (cm)</label>
            <InputNumber @bind-Value="Length" class="w-full px-3 py-2 border rounded" />
        </div>
        <div>
            <label class="block text-gray-700 text-sm font-bold mb-2">Width (cm)</label>
            <InputNumber @bind-Value="Width" class="w-full px-3 py-2 border rounded" />
        </div>
    </div>
    
    <div class="mt-4 grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
            <label class="block text-gray-700 text-sm font-bold mb-2">Base Price</label>
            <p class="text-lg">@BasePrice.ToString("N2") TZS</p>
        </div>
        <div>
            <label class="block text-gray-700 text-sm font-bold mb-2">Tax</label>
            <p class="text-lg">@TaxAmount.ToString("N2") TZS</p>
        </div>
        <div>
            <label class="block text-gray-700 text-sm font-bold mb-2">Total Price</label>
            <p class="text-lg font-bold">@TotalPrice.ToString("N2") TZS</p>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public decimal Weight { get; set; }
    
    [Parameter]
    public decimal Height { get; set; }
    
    [Parameter]
    public decimal Length { get; set; }
    
    [Parameter]
    public decimal Width { get; set; }
    
    [Parameter]
    public decimal BasePrice { get; set; }
    
    [Parameter]
    public decimal TaxAmount { get; set; }
    
    [Parameter]
    public decimal TotalPrice { get; set; }
    
    [Parameter]
    public EventCallback<decimal> BasePriceChanged { get; set; }
    
    [Parameter]
    public EventCallback<decimal> TaxAmountChanged { get; set; }
    
    [Parameter]
    public EventCallback<decimal> TotalPriceChanged { get; set; }
}
