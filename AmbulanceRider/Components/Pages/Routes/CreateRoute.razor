@page "/routes/create"
@using AmbulanceRider.Models
@using AmbulanceRider.Services
@inject ApiService ApiService
@inject NavigationManager Navigation

<PageTitle>Create Route</PageTitle>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3><i class="bi bi-map me-2"></i>Create New Route</h3>
                </div>
                <div class="card-body">
                    @if (errorMessage != null)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
                        </div>
                    }

                    <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />
                        
                        <div class="mb-3">
                            <label class="form-label">Route Name *</label>
                            <InputText @bind-Value="model.Name" class="form-control" placeholder="e.g., Downtown to Hospital" />
                            <ValidationMessage For="@(() => model.Name)" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Start Location *</label>
                                <InputText @bind-Value="model.StartLocation" class="form-control" placeholder="e.g., 123 Main St" />
                                <ValidationMessage For="@(() => model.StartLocation)" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">End Location *</label>
                                <InputText @bind-Value="model.EndLocation" class="form-control" placeholder="e.g., City Hospital" />
                                <ValidationMessage For="@(() => model.EndLocation)" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Distance (km) *</label>
                                <InputNumber @bind-Value="model.Distance" class="form-control" step="0.1" />
                                <ValidationMessage For="@(() => model.Distance)" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Estimated Duration (minutes) *</label>
                                <InputNumber @bind-Value="model.EstimatedDuration" class="form-control" />
                                <ValidationMessage For="@(() => model.EstimatedDuration)" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <InputTextArea @bind-Value="model.Description" class="form-control" rows="3" placeholder="Optional route description..." />
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-secondary" @onclick="Cancel">
                                <i class="bi bi-x-circle me-1"></i> Cancel
                            </button>
                            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                <i class="bi bi-check-circle me-1"></i> Create Route
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private CreateRouteDto model = new();
    private bool isSubmitting = false;
    private string? errorMessage;

    private async Task HandleSubmit()
    {
        try
        {
            isSubmitting = true;
            errorMessage = null;
            await ApiService.CreateRouteAsync(model);
            Navigation.NavigateTo("/routes");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error creating route: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/routes");
    }
}
