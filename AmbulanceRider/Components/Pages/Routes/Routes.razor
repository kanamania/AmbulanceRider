@page "/routes"
@using AmbulanceRider.Models
@using AmbulanceRider.Services
@inject ApiService ApiService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Routes</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-map me-2"></i>Routes</h1>
        <button class="btn btn-primary create-btn" @onclick="NavigateToCreate">
            <i class="bi bi-plus-circle me-1"></i> Add New Route
        </button>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Start Location</th>
                                <th>End Location</th>
                                <th>Distance (km)</th>
                                <th>Duration (min)</th>
                                <th>Description</th>
                                <th>Created At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var route in routes)
                            {
                                <tr>
                                    <td>@route.Id</td>
                                    <td><strong>@route.Name</strong></td>
                                    <td><i class="bi bi-geo-alt-fill text-success me-1"></i>@route.StartLocation</td>
                                    <td><i class="bi bi-geo-alt-fill text-danger me-1"></i>@route.EndLocation</td>
                                    <td>@route.Distance.ToString("F2")</td>
                                    <td>@route.EstimatedDuration</td>
                                    <td>@(string.IsNullOrEmpty(route.Description) ? "-" : route.Description)</td>
                                    <td>@route.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>
                                        <div class="btn-group btn-group-small" role="group" aria-label="Basic example">
                                            <button type="button" class="btn btn-primary" @onclick="() => NavigateToEdit(route.Id)">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button type="button" class="btn btn-danger" @onclick="() => DeleteRoute(route.Id)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (routes.Count == 0)
                {
                    <div class="alert alert-info text-center">
                        <i class="bi bi-info-circle me-2"></i>No routes found. Click "Add New Route" to create one.
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    private List<RouteDto> routes = new();
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadRoutes();
    }

    private async Task LoadRoutes()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            routes = await ApiService.GetRoutesAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading routes: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/routes/create");
    }

    private void NavigateToEdit(int id)
    {
        Navigation.NavigateTo($"/routes/edit/{id}");
    }

    private async Task DeleteRoute(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this route?"))
        {
            try
            {
                await ApiService.DeleteRouteAsync(id);
                await LoadRoutes();
            }
            catch (Exception ex)
            {
                errorMessage = $"Error deleting route: {ex.Message}";
            }
        }
    }
}
