@page "/"
@using AmbulanceRider.Services
@using AmbulanceRider.Models
@using System.Net
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject IApiService ApiService
@inject NavigationManager Navigation
@inject AuthService AuthService

<PageTitle>Dashboard - AmbulanceRider</PageTitle>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-speedometer2 me-2"></i>Dashboard</h1>
        <div class="text-muted">
            <i class="bi bi-calendar3 me-1"></i>
            @DateTime.Now.ToString("MMMM dd, yyyy")
        </div>
    </div>

    @if (_isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Loading dashboard data...</p>
        </div>
    }
    else if (_error != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @_error
        </div>
    }
    else
    {
        <!-- Quick Stats Cards -->
        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="text-muted mb-2">Total Trips</h6>
                                <h2 class="mb-0">@_trips.Count</h2>
                                <small class="text-success">
                                    <i class="bi bi-arrow-up"></i> Active
                                </small>
                            </div>
                            <div class="bg-primary bg-opacity-10 p-3 rounded">
                                <i class="bi bi-truck fs-4 text-primary"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="text-muted mb-2">Pending</h6>
                                <h2 class="mb-0">@_pendingTrips</h2>
                                <small class="text-warning">
                                    <i class="bi bi-clock"></i> Awaiting approval
                                </small>
                            </div>
                            <div class="bg-warning bg-opacity-10 p-3 rounded">
                                <i class="bi bi-hourglass-split fs-4 text-warning"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="text-muted mb-2">In Progress</h6>
                                <h2 class="mb-0">@_inProgressTrips</h2>
                                <small class="text-info">
                                    <i class="bi bi-arrow-right"></i> On the road
                                </small>
                            </div>
                            <div class="bg-info bg-opacity-10 p-3 rounded">
                                <i class="bi bi-arrow-repeat fs-4 text-info"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="text-muted mb-2">Completed</h6>
                                <h2 class="mb-0">@_completedTrips</h2>
                                <small class="text-success">
                                    <i class="bi bi-check-circle"></i> Success
                                </small>
                            </div>
                            <div class="bg-success bg-opacity-10 p-3 rounded">
                                <i class="bi bi-check-circle fs-4 text-success"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Resources Overview -->
        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-3">
                            <i class="bi bi-truck me-2"></i>Vehicles
                        </h6>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h3 class="mb-0">@_vehicles.Count</h3>
                                <small class="text-muted">Total vehicles</small>
                            </div>
                            <a href="/vehicles" class="btn btn-sm btn-outline-primary">
                                View All <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-3">
                            <i class="bi bi-people me-2"></i>Users
                        </h6>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h3 class="mb-0">@_users.Count</h3>
                                <small class="text-muted">Active users</small>
                            </div>
                            <a href="/users" class="btn btn-sm btn-outline-primary">
                                View All <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-3">
                            <i class="bi bi-geo-alt me-2"></i>Locations
                        </h6>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h3 class="mb-0">@_locations.Count</h3>
                                <small class="text-muted">Registered locations</small>
                            </div>
                            <a href="/locations" class="btn btn-sm btn-outline-primary">
                                View All <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Trips Table -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-list-ul me-2"></i>Recent Trips
                            </h5>
                            <a href="/trips" class="btn btn-sm btn-primary create-btn justify-content-end">
                                View All Trips
                                <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        @if (_recentTrips.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Trip ID</th>
                                            <th>Patient</th>
                                            <th>From</th>
                                            <th>To</th>
                                            <th>Vehicle</th>
                                            <th>Status</th>
                                            <th>Date</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var trip in _recentTrips)
                                        {
                                            <tr>
                                                <td><strong>#@trip.Id</strong></td>
                                                <td>@trip.Name</td>
                                                <td>
                                                    <small class="text-muted">
                                                        <i class="bi bi-geo-alt"></i> @trip.FromLocationName
                                                    </small>
                                                </td>
                                                <td>
                                                    <small class="text-muted">
                                                        <i class="bi bi-geo-alt-fill"></i> @trip.ToLocationName
                                                    </small>
                                                </td>
                                                <td>@trip.Vehicle!.Name</td>
                                                <td>
                                                    <span class="badge @GetStatusBadgeClass(trip.Status)">
                                                        @trip.Status
                                                    </span>
                                                </td>
                                                <td>
                                                    <small>@trip.CreatedAt.ToString("MMM dd, HH:mm")</small>
                                                </td>
                                                <td>
                                                    <a href="/trips/edit/@trip.Id" class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5 text-muted">
                                <i class="bi bi-inbox fs-1"></i>
                                <p class="mt-2">No trips found</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Trip Types and Vehicle Summary -->
        <div class="row g-3">
            <div class="col-md-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="bi bi-tags me-2"></i>Trip Types
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (_tripTypes.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var tripType in _tripTypes.Take(5))
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                        <div>
                                            <i class="bi bi-tag me-2" style="color: @tripType.Color"></i>
                                            <strong>@tripType.Name</strong>
                                            <br/>
                                            <small class="text-muted">@tripType.Description</small>
                                        </div>
                                        <span class="badge bg-primary rounded-pill">
                                            @_trips.Count(t => t.TripTypeId == tripType.Id)
                                        </span>
                                    </div>
                                }
                            </div>
                            @if (_tripTypes.Count > 5)
                            {
                                <div class="text-center mt-3">
                                    <a href="/triptypes" class="btn btn-sm btn-outline-secondary">
                                        View All (@_tripTypes.Count)
                                    </a>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted text-center">No trip types configured</p>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="bi bi-truck me-2"></i>Vehicle Status
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (_vehicles.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var vehicle in _vehicles.Take(5))
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                        <div>
                                            <strong>@vehicle.Name</strong>
                                        </div>
                                        <div class="text-end">
                                            @if (_trips.Count(t => t.VehicleId == vehicle.Id && t.Status == "InProgress") > 0)
                                            {
                                                <span class="badge bg-info">In Use</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Available</span>
                                            }
                                            <br/>
                                            <small class="text-muted">@_trips.Count(t => t.VehicleId == vehicle.Id) trips</small>
                                        </div>
                                    </div>
                                }
                            </div>
                            @if (_vehicles.Count > 5)
                            {
                                <div class="text-center mt-3">
                                    <a href="/vehicles" class="btn btn-sm btn-outline-secondary">
                                        View All (@_vehicles.Count)
                                    </a>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted text-center">No vehicles registered</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private bool _isLoading = true;
    private string? _error;

    private List<TripDto> _trips = new();
    private List<VehicleDto> _vehicles = new();
    private List<UserDto> _users = new();
    private List<LocationDto> _locations = new();
    private List<TripTypeDto> _tripTypes = new();
    private CompanyStatsDto? CompanyStats { get; set; }

    private List<TripDto> _recentTrips => _trips.OrderByDescending(t => t.CreatedAt).Take(10).ToList();
    private int _pendingTrips => _trips.Count(t => t.Status == "Pending");
    private int _inProgressTrips => _trips.Count(t => t.Status == "InProgress");
    private int _completedTrips => _trips.Count(t => t.Status == "Completed");

    protected override async Task OnInitializedAsync()
    {
        try
        {
            CompanyStats = await ApiService.GetCompanyStatsAsync(1); // Default company ID
        }
        catch (HttpRequestException ex)
        {
            if (ex.StatusCode == HttpStatusCode.Unauthorized)
            {
                await HandleUnauthorizedAsync();
                return;
            }

            _error = $"Failed to load company stats: {ex.Message}";
            Console.Error.WriteLine($"Company stats error: {ex}");
            _isLoading = false;
            return;
        }
        catch (Exception ex)
        {
            _error = $"Failed to load company stats: {ex.Message}";
            Console.Error.WriteLine($"Company stats error: {ex}");
            _isLoading = false;
            return;
        }

        await LoadDashboardData();
    }

    private async Task LoadDashboardData()
    {
        _isLoading = true;
        _error = null;

        try
        {
            // Load all data in parallel
            var tripsTask = ApiService.GetTripsAsync();
            var vehiclesTask = ApiService.GetVehiclesAsync();
            var usersTask = ApiService.GetUsersAsync();
            var locationsTask = ApiService.GetLocationsAsync();
            var tripTypesTask = ApiService.GetTripTypesAsync();

            await Task.WhenAll(tripsTask, vehiclesTask, usersTask, locationsTask, tripTypesTask);

            _trips = await tripsTask;
            _vehicles = await vehiclesTask;
            _users = await usersTask;
            _locations = await locationsTask;
            _tripTypes = await tripTypesTask;
        }
        catch (HttpRequestException ex)
        {
            if (ex.StatusCode == HttpStatusCode.Unauthorized)
            {
                await HandleUnauthorizedAsync();
                return;
            }

            _error = $"Failed to load dashboard data: {ex.Message}";
            Console.Error.WriteLine($"Dashboard error: {ex}");
        }
        catch (Exception ex)
        {
            _error = $"Failed to load dashboard data: {ex.Message}";
            Console.Error.WriteLine($"Dashboard error: {ex}");
        }
        finally
        {
            _isLoading = false;
        }
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning text-dark",
            "Approved" => "bg-info",
            "InProgress" => "bg-primary",
            "Completed" => "bg-success",
            "Cancelled" => "bg-danger",
            "Rejected" => "bg-secondary",
            _ => "bg-secondary"
        };
    }

    private async Task HandleUnauthorizedAsync()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login", true);
    }
}
