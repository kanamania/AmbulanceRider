@page "/locations/edit/{id:int}"
@using AmbulanceRider.Models
@using AmbulanceRider.Services
@using AmbulanceRider.Components.Shared
@inject ApiService ApiService
@inject NavigationManager Navigation

<PageTitle>Edit Location</PageTitle>

<div class="container-fluid">
    <div class="d-flex align-items-center mb-4">
        <button class="btn btn-outline-secondary me-3" @onclick="GoBack">
            <i class="bi bi-arrow-left"></i>
        </button>
        <h1><i class="bi bi-geo-alt me-2"></i>Edit Location</h1>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
    }
    else if (location == null)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-circle me-2"></i>Location not found.
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <EditForm Model="updateLocationDto" OnValidSubmit="HandleSubmit">
                            <DataAnnotationsValidator />
                            
                            <div class="mb-4">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-tag me-1"></i>Location Name
                                </label>
                                <InputText class="form-control form-control-lg" @bind-Value="updateLocationDto.Name" placeholder="Enter location name" />
                                <ValidationMessage For="@(() => updateLocationDto.Name)" class="text-danger" />
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-map me-1"></i>Update Location on Map
                                </label>
                                <MapPicker 
                                    MapId="edit-location-map"
                                    Latitude="@currentLatitude"
                                    Longitude="@currentLongitude"
                                    Zoom="13"
                                    Editable="true"
                                    Height="500px"
                                    OnLocationChanged="HandleLocationChanged" />
                            </div>

                            <div class="d-flex justify-content-between align-items-center">
                                <button type="button" class="btn btn-outline-secondary" @onclick="GoBack">
                                    <i class="bi bi-x-circle me-1"></i>Cancel
                                </button>
                                <button type="submit" class="btn btn-primary btn-lg" disabled="@isSubmitting">
                                    @if (isSubmitting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        <span>Updating...</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-check-circle me-1"></i>
                                        <span>Update Location</span>
                                    }
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Location Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <strong>Name:</strong>
                            <p class="text-muted mb-0">@(string.IsNullOrEmpty(updateLocationDto.Name) ? location.Name : updateLocationDto.Name)</p>
                        </div>
                        <div class="mb-3">
                            <strong>Latitude:</strong>
                            <p class="text-muted mb-0">@currentLatitude.ToString("F6")</p>
                        </div>
                        <div class="mb-3">
                            <strong>Longitude:</strong>
                            <p class="text-muted mb-0">@currentLongitude.ToString("F6")</p>
                        </div>
                        <div class="mb-3">
                            <strong>Created:</strong>
                            <p class="text-muted mb-0">@location.CreatedAt.ToString("MMM dd, yyyy HH:mm")</p>
                        </div>
                        <hr />
                        <div class="alert alert-info mb-0">
                            <small>
                                <i class="bi bi-lightbulb me-1"></i>
                                <strong>Tip:</strong> Click on the map or drag the marker to update the location. Leave fields empty to keep current values.
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }

    private LocationDto? location;
    private UpdateLocationDto updateLocationDto = new();
    private bool isLoading = true;
    private bool isSubmitting = false;
    private string? errorMessage;
    private double currentLatitude;
    private double currentLongitude;

    protected override async Task OnInitializedAsync()
    {
        await LoadLocation();
    }

    private async Task LoadLocation()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            location = await ApiService.GetLocationByIdAsync(Id);
            
            if (location != null)
            {
                updateLocationDto.Name = location.Name;
                currentLatitude = location.Latitude;
                currentLongitude = location.Longitude;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading location: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void HandleLocationChanged((double Latitude, double Longitude) newLocation)
    {
        currentLatitude = newLocation.Latitude;
        currentLongitude = newLocation.Longitude;
        updateLocationDto.Latitude = newLocation.Latitude;
        updateLocationDto.Longitude = newLocation.Longitude;
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSubmitting = true;
            errorMessage = null;

            await ApiService.UpdateLocationAsync(Id, updateLocationDto);
            Navigation.NavigateTo("/locations");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error updating location: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/locations");
    }
}
