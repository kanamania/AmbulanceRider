@page "/locations"
@using AmbulanceRider.Models
@using AmbulanceRider.Services
@inject IApiService ApiService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Locations</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-geo-alt me-2"></i>Locations</h1>
        <button class="btn btn-primary create-btn" @onclick="NavigateToCreate">
            <i class="bi bi-plus-circle me-1"></i> Add Location
        </button>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var location in locations)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0">
                                    <i class="bi bi-geo-alt-fill text-primary me-2"></i>@location.Name
                                </h5>
                                <div class="btn-group btn-group-sm">
                                    <button class="btn btn-outline-primary" @onclick="() => NavigateToEdit(location.Id)" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-outline-danger" @onclick="() => DeleteLocation(location.Id)" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <small class="text-muted d-block">
                                    <i class="bi bi-compass me-1"></i>
                                    Lat: @location.Latitude.ToString("F6"), Lng: @location.Longitude.ToString("F6")
                                </small>
                                <small class="text-muted d-block">
                                    <i class="bi bi-calendar me-1"></i>
                                    Created: @location.CreatedAt.ToString("MMM dd, yyyy")
                                </small>
                            </div>
                            
                            <div class="location-map-preview" id="map-preview-@location.Id" style="height: 200px; border-radius: 8px;"></div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (locations.Count == 0)
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle me-2"></i>No locations found. Click "Add New Location" to create one.
            </div>
        }
    }
</div>

@code {
    private List<LocationDto> locations = new();
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadLocations();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender && !isLoading && locations.Any())
        {
            foreach (var location in locations)
            {
                try
                {
                    await JSRuntime.InvokeVoidAsync("mapHelper.initMap", 
                        $"map-preview-{location.Id}", 
                        location.Latitude, 
                        location.Longitude, 
                        13, 
                        false);
                }
                catch { }
            }
        }
    }

    private async Task LoadLocations()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            locations = await ApiService.GetLocationsAsync();
        }
        catch (HttpRequestException ex)
        {
            errorMessage = $"HTTP Error loading locations: {ex.StatusCode} - {ex.Message}";
            if (ex.InnerException != null)
            {
                errorMessage += $"\nInner: {ex.InnerException.Message}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading locations: {ex.GetType().Name} - {ex.Message}";
            if (ex.InnerException != null)
            {
                errorMessage += $"\nInner: {ex.InnerException.Message}";
            }
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/locations/create");
    }

    private void NavigateToEdit(int id)
    {
        Navigation.NavigateTo($"/locations/edit/{id}");
    }

    private async Task DeleteLocation(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this location?"))
        {
            try
            {
                await ApiService.DeleteLocationAsync(id);
                await LoadLocations();
            }
            catch (Exception ex)
            {
                errorMessage = $"Error deleting location: {ex.Message}";
            }
        }
    }
}
