@page "/vehicles/create"
@using AmbulanceRider.Models
@using AmbulanceRider.Services
@inject IApiService ApiService
@inject NavigationManager Navigation

<PageTitle>Create Vehicle</PageTitle>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3><i class="bi bi-truck me-2"></i>Create New Vehicle</h3>
                </div>
                <div class="card-body">
                    @if (errorMessage != null)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
                        </div>
                    }

                    <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />
                        
                        <div class="mb-3">
                            <label class="form-label">Vehicle Name *</label>
                            <InputText @bind-Value="model.Name" class="form-control" placeholder="e.g., Ambulance Unit 1" />
                            <ValidationMessage For="@(() => model.Name)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Vehicle Type *</label>
                            <select @bind="selectedVehicleTypeId" class="form-select">
                                <option value="0">-- Select Vehicle Type --</option>
                                @foreach (var type in vehicleTypes)
                                {
                                    <option value="@type.Id">@type.Name</option>
                                }
                            </select>
                            @if (selectedVehicleTypeId == 0 && model.Types.Count == 0)
                            {
                                <div class="text-danger small mt-1">Please select a vehicle type</div>
                            }
                            @if (selectedVehicleTypeId > 0)
                            {
                                <div class="mt-2">
                                    <span class="badge bg-success">
                                        @vehicleTypes.FirstOrDefault(t => t.Id == selectedVehicleTypeId)?.Name
                                    </span>
                                </div>
                            }
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-secondary" @onclick="Cancel">
                                <i class="bi bi-x-circle me-1"></i> Cancel
                            </button>
                            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                <i class="bi bi-check-circle me-1"></i> Create Vehicle
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private CreateVehicleDto model = new();
    private List<VehicleTypeDto> vehicleTypes = new();
    private int selectedVehicleTypeId = 0;
    private bool isSubmitting = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            vehicleTypes = await ApiService.GetVehicleTypesAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading vehicle types: {ex.Message}";
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            if (selectedVehicleTypeId == 0)
            {
                errorMessage = "Please select a vehicle type";
                return;
            }

            isSubmitting = true;
            errorMessage = null;
            
            // Set the vehicle type name based on selection
            var selectedType = vehicleTypes.FirstOrDefault(t => t.Id == selectedVehicleTypeId);
            if (selectedType != null)
            {
                model.Types = new List<string> { selectedType.Name };
            }
            
            await ApiService.CreateVehicleAsync(model);
            Navigation.NavigateTo("/vehicles");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error creating vehicle: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/vehicles");
    }
}
