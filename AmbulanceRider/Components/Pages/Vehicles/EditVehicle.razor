@page "/vehicles/edit/{id:int}"
@using AmbulanceRider.Models
@using AmbulanceRider.Services
@inject ApiService ApiService
@inject NavigationManager Navigation

<PageTitle>Edit Vehicle</PageTitle>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3><i class="bi bi-pencil me-2"></i>Edit Vehicle</h3>
                </div>
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else if (errorMessage != null)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
                        </div>
                    }
                    else if (model != null)
                    {
                        <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                            <DataAnnotationsValidator />
                            
                            <div class="mb-3">
                                <label class="form-label">Vehicle Name *</label>
                                <InputText @bind-Value="model.Name" class="form-control" />
                                <ValidationMessage For="@(() => model.Name)" />
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">Vehicle Type *</label>
                                <select @bind="selectedVehicleTypeId" class="form-select">
                                    <option value="0">-- Select Vehicle Type --</option>
                                    @foreach (var type in vehicleTypes)
                                    {
                                        <option value="@type.Id">@type.Name</option>
                                    }
                                </select>
                                @if (selectedVehicleTypeId == 0 && (model.Types == null || model.Types.Count == 0))
                                {
                                    <div class="text-danger small mt-1">Please select a vehicle type</div>
                                }
                                @if (selectedVehicleTypeId > 0)
                                {
                                    <div class="mt-2">
                                        <span class="badge bg-success">
                                            @vehicleTypes.FirstOrDefault(t => t.Id == selectedVehicleTypeId)?.Name
                                        </span>
                                    </div>
                                }
                            </div>

                            <div class="d-flex justify-content-between">
                                <button type="button" class="btn btn-secondary" @onclick="Cancel">
                                    <i class="bi bi-x-circle me-1"></i> Cancel
                                </button>
                                <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                    @if (isSubmitting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-1"></span>
                                    }
                                    <i class="bi bi-check-circle me-1"></i> Update Vehicle
                                </button>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private UpdateVehicleDto? model;
    private List<VehicleTypeDto> vehicleTypes = new();
    private int selectedVehicleTypeId = 0;
    private bool isLoading = true;
    private bool isSubmitting = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadVehicleTypes();
        await LoadVehicle();
    }

    private async Task LoadVehicleTypes()
    {
        try
        {
            vehicleTypes = await ApiService.GetVehicleTypesAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading vehicle types: {ex.Message}";
        }
    }

    private async Task LoadVehicle()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            var vehicle = await ApiService.GetVehicleByIdAsync(Id);
            
            if (vehicle != null)
            {
                model = new UpdateVehicleDto
                {
                    Name = vehicle.Name,
                    Image = vehicle.Image,
                    Types = vehicle.Types.ToList()
                };
                
                // Set selected vehicle type based on existing data
                if (vehicle.Types.Any())
                {
                    var existingType = vehicleTypes.FirstOrDefault(vt => vt.Name == vehicle.Types.First());
                    if (existingType != null)
                    {
                        selectedVehicleTypeId = existingType.Id;
                    }
                }
            }
            else
            {
                errorMessage = "Vehicle not found";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading vehicle: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        if (model == null) return;

        try
        {
            if (selectedVehicleTypeId == 0)
            {
                errorMessage = "Please select a vehicle type";
                return;
            }

            isSubmitting = true;
            errorMessage = null;
            
            // Set the vehicle type name based on selection
            var selectedType = vehicleTypes.FirstOrDefault(t => t.Id == selectedVehicleTypeId);
            if (selectedType != null)
            {
                model.Types = new List<string> { selectedType.Name };
            }
            
            await ApiService.UpdateVehicleAsync(Id, model);
            Navigation.NavigateTo("/vehicles");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error updating vehicle: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/vehicles");
    }
}
