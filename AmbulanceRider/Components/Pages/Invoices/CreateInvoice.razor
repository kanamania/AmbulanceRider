@page "/invoices/create"
@using AmbulanceRider.Models
@using AmbulanceRider.Services
@inject IApiService ApiService
@inject NavigationManager NavigationManager
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin,Dispatcher")]

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-receipt-cutoff"></i> Create Invoice</h2>
        <button class="btn btn-outline-secondary" @onclick="GoBack">
            <i class="bi bi-arrow-left"></i> Back to Invoices
        </button>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-funnel"></i> Invoice Settings</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Invoice Type</label>
                        <select class="form-select" @bind="invoiceType">
                            <option value="Proforma">Proforma Invoice</option>
                            <option value="Final">Final Invoice</option>
                        </select>
                        <small class="text-muted">
                            @if (invoiceType == "Proforma")
                            {
                                <span>For estimates and quotations</span>
                            }
                            else
                            {
                                <span>For official billing and payment</span>
                            }
                        </small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Date Range</label>
                        <div class="btn-group w-100 mb-2" role="group">
                            <button type="button" class="btn btn-outline-primary @(rangeType == "week" ? "active" : "")" @onclick='() => SetRange("week")'>
                                This Week
                            </button>
                            <button type="button" class="btn btn-outline-primary @(rangeType == "month" ? "active" : "")" @onclick='() => SetRange("month")'>
                                This Month
                            </button>
                            <button type="button" class="btn btn-outline-primary @(rangeType == "custom" ? "active" : "")" @onclick='() => SetRange("custom")'>
                                Custom
                            </button>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Period Start</label>
                        <input type="date" class="form-control" @bind="periodStart" @bind:event="oninput" @onchange="LoadCompaniesWithTrips" disabled="@(rangeType != "custom")" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Period End</label>
                        <input type="date" class="form-control" @bind="periodEnd" @bind:event="oninput" @onchange="LoadCompaniesWithTrips" disabled="@(rangeType != "custom")" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Notes (Optional)</label>
                        <textarea class="form-control" rows="3" @bind="notes" placeholder="Add any notes for this invoice..."></textarea>
                    </div>

                    <button class="btn btn-primary w-100" @onclick="LoadCompaniesWithTrips" disabled="@loading">
                        <i class="bi bi-search"></i> @(loading ? "Loading..." : "Find Companies")
                    </button>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            @if (loading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Searching for companies with trips...</p>
                </div>
            }
            else if (companiesWithTrips.Any())
            {
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-building"></i> Companies with Unpaid Trips
                            <span class="badge bg-light text-dark float-end">@companiesWithTrips.Count companies</span>
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Company</th>
                                        <th class="text-center">Trips</th>
                                        <th class="text-end">Subtotal</th>
                                        <th class="text-end">Tax</th>
                                        <th class="text-end">Total</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var company in companiesWithTrips)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@company.CompanyName</strong>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-info">@company.TripCount</span>
                                            </td>
                                            <td class="text-end">
                                                <span class="text-muted">KES</span> @company.SubTotal.ToString("N2")
                                            </td>
                                            <td class="text-end">
                                                <span class="text-muted">KES</span> @company.TaxAmount.ToString("N2")
                                            </td>
                                            <td class="text-end">
                                                <strong class="text-success">KES @company.TotalAmount.ToString("N2")</strong>
                                            </td>
                                            <td class="text-center">
                                                <button class="btn btn-sm btn-success" @onclick="() => CreateInvoiceForCompany(company.CompanyId)">
                                                    <i class="bi bi-plus-circle"></i> Create Invoice
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <th>Total</th>
                                        <th class="text-center">@companiesWithTrips.Sum(c => c.TripCount)</th>
                                        <th class="text-end">KES @companiesWithTrips.Sum(c => c.SubTotal).ToString("N2")</th>
                                        <th class="text-end">KES @companiesWithTrips.Sum(c => c.TaxAmount).ToString("N2")</th>
                                        <th class="text-end"><strong>KES @companiesWithTrips.Sum(c => c.TotalAmount).ToString("N2")</strong></th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="alert alert-info mt-3">
                    <i class="bi bi-info-circle"></i> 
                    <strong>Period:</strong> @periodStart.ToString("dd MMM yyyy") - @periodEnd.ToString("dd MMM yyyy")
                    <br />
                    <strong>Note:</strong> Only companies with completed, unpaid trips in this period are shown.
                </div>
            }
            else if (searchPerformed)
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                        <h4 class="mt-3">No Companies Found</h4>
                        <p class="text-muted">
                            No companies have completed, unpaid trips for the selected period.
                        </p>
                        <p class="text-muted">
                            <strong>Period:</strong> @periodStart.ToString("dd MMM yyyy") - @periodEnd.ToString("dd MMM yyyy")
                        </p>
                        <button class="btn btn-primary" @onclick='() => SetRange("month")'>
                            <i class="bi bi-calendar"></i> Try This Month
                        </button>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-search" style="font-size: 4rem; color: #ccc;"></i>
                        <h4 class="mt-3">Ready to Create Invoices</h4>
                        <p class="text-muted">
                            Select your invoice settings on the left and click "Find Companies" to see which companies have unpaid trips.
                        </p>
                        <div class="mt-4">
                            <h6>Quick Actions:</h6>
                            <div class="btn-group" role="group">
                                <button class="btn btn-outline-primary" @onclick='() => SetRange("week")'>
                                    <i class="bi bi-calendar-week"></i> This Week
                                </button>
                                <button class="btn btn-outline-primary" @onclick='() => SetRange("month")'>
                                    <i class="bi bi-calendar-month"></i> This Month
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private string invoiceType = "Final";
    private string rangeType = "month";
    private DateTime periodStart;
    private DateTime periodEnd;
    private string notes = "";
    private bool loading = false;
    private bool searchPerformed = false;
    private List<InvoicePreviewDto> companiesWithTrips = new();

    protected override void OnInitialized()
    {
        SetRange("month");
    }

    private void SetRange(string type)
    {
        rangeType = type;
        var today = DateTime.Today;

        switch (type)
        {
            case "week":
                var startOfWeek = today.AddDays(-(int)today.DayOfWeek);
                periodStart = startOfWeek;
                periodEnd = startOfWeek.AddDays(6);
                LoadCompaniesWithTrips();
                break;

            case "month":
                periodStart = new DateTime(today.Year, today.Month, 1);
                periodEnd = periodStart.AddMonths(1).AddDays(-1);
                LoadCompaniesWithTrips();
                break;

            case "custom":
                // Keep current dates, user will set manually
                break;
        }
    }

    private async Task LoadCompaniesWithTrips()
    {
        loading = true;
        searchPerformed = false;
        companiesWithTrips.Clear();

        try
        {
            var companies = await ApiService.GetCompaniesAsync() ?? new();

            foreach (var company in companies)
            {
                try
                {
                    var preview = await ApiService.PreviewInvoiceAsync(new CreateInvoiceDto
                    {
                        CompanyId = company.Id,
                        Type = invoiceType,
                        PeriodStart = periodStart,
                        PeriodEnd = periodEnd
                    });

                    if (preview.TripCount > 0)
                    {
                        companiesWithTrips.Add(preview);
                    }
                }
                catch
                {
                    // Skip companies with no trips
                    continue;
                }
            }

            searchPerformed = true;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading companies: {ex.Message}");
        }
        finally
        {
            loading = false;
        }
    }

    private async Task CreateInvoiceForCompany(int companyId)
    {
        try
        {
            var dto = new CreateInvoiceDto
            {
                CompanyId = companyId,
                Type = invoiceType,
                PeriodStart = periodStart,
                PeriodEnd = periodEnd,
                Notes = notes
            };

            var invoice = await ApiService.CreateInvoiceAsync(dto);
            NavigationManager.NavigateTo($"/invoices/{invoice.Id}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error creating invoice: {ex.Message}");
        }
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/invoices");
    }
}
