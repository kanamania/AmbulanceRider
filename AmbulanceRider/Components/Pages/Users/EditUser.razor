@page "/users/edit/{id}"
@using AmbulanceRider.Models
@using AmbulanceRider.Services
@inject ApiService ApiService
@inject NavigationManager Navigation

<PageTitle>Edit User</PageTitle>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3><i class="bi bi-pencil me-2"></i>Edit User</h3>
                </div>
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary"></div>
                        </div>
                    }
                    else if (errorMessage != null)
                    {
                        <div class="alert alert-danger">@errorMessage</div>
                    }
                    else if (model != null)
                    {
                        <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">First Name</label>
                                    <InputText @bind-Value="model.FirstName" class="form-control" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Last Name</label>
                                    <InputText @bind-Value="model.LastName" class="form-control" />
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <InputText @bind-Value="model.Email" class="form-control" type="email" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Phone Number</label>
                                <InputText @bind-Value="model.PhoneNumber" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">New Password (leave blank to keep current)</label>
                                <InputText @bind-Value="model.Password" class="form-control" type="password" />
                            </div>
                            <div class="mb-4">
                                <label class="block text-gray-700 text-sm font-bold mb-2" for="company">Company</label>
                                <InputSelect @bind-Value="model.CompanyId" class="w-full px-3 py-2 border rounded">
                                    <option value="">-- Select Company --</option>
                                    @foreach (var company in Companies)
                                    {
                                        <option value="@company.Id">@company.Name</option>
                                    }
                                </InputSelect>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Roles</label>
                                <div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" @bind="isAdmin" id="roleAdmin">
                                        <label class="form-check-label" for="roleAdmin">Admin</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" @bind="isDriver" id="roleDriver">
                                        <label class="form-check-label" for="roleDriver">Driver</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" @bind="isDispatcher" id="roleDispatcher">
                                        <label class="form-check-label" for="roleDispatcher">Dispatcher</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" @bind="isUser" id="roleUser">
                                        <label class="form-check-label" for="roleUser">User</label>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                                <button type="submit" class="btn btn-primary" disabled="@isSubmitting">Update</button>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Id { get; set; } = string.Empty;
    private UpdateUserDto? model;
    private bool isLoading = true;
    private bool isSubmitting = false;
    private string? errorMessage;
    private bool isAdmin, isDriver, isDispatcher, isUser;
    private List<CompanyDto> Companies { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var user = await ApiService.GetUserByIdAsync(Id);
            if (user != null)
            {
                model = new UpdateUserDto
                {
                    FirstName = user.FirstName,
                    LastName = user.LastName,
                    Email = user.Email,
                    PhoneNumber = user.PhoneNumber,
                    CompanyId = user.CompanyId,
                    Roles = new List<string>()
                };
                isAdmin = user.Roles.Contains("Admin");
                isDriver = user.Roles.Contains("Driver");
                isDispatcher = user.Roles.Contains("Dispatcher");
                isUser = user.Roles.Contains("User");
            }
            Companies = await ApiService.GetCompaniesAsync();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        if (model == null) return;
        
        Console.WriteLine("[UI] Starting user update process");
        
        // Sync checkbox states with roles before submission
        model.Roles = new List<string>();
        if (isAdmin) model.Roles.Add("Admin");
        if (isDriver) model.Roles.Add("Driver");
        if (isDispatcher) model.Roles.Add("Dispatcher");
        if (isUser) model.Roles.Add("User");

        Console.WriteLine($"[UI] Prepared update with roles: {string.Join(", ", model.Roles)}");
        Console.WriteLine($"[UI] Checkbox states - Admin: {isAdmin}, Driver: {isDriver}, Dispatcher: {isDispatcher}, User: {isUser}");

        try
        {
            isSubmitting = true;
            errorMessage = null;
            
            Console.WriteLine("[UI] Calling API to update user");
            var updatedUser = await ApiService.UpdateUserAsync(Id, model);
            Console.WriteLine($"[UI] API returned updated user with roles: {string.Join(", ", updatedUser.Roles)}");
            
            // Force refresh of user data
            Console.WriteLine("[UI] Refreshing UI state");
            await InvokeAsync(StateHasChanged);
            
            Console.WriteLine("[UI] Navigating to user details with force load");
            // Navigation.NavigateTo($"/users/{Id}", forceLoad: true);
            Navigation.NavigateTo("/users");
            
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
            Console.WriteLine($"Error updating user: {ex.Message}");
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel() => Navigation.NavigateTo("/users");
}
