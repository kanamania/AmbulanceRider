@page "/trips/create"
@using AmbulanceRider.Models
@using AmbulanceRider.Services
@using AmbulanceRider.Components.Shared
@inject ApiService ApiService
@inject NavigationManager Navigation
@inject TelemetryService TelemetryService

<PageTitle>Schedule New Trip</PageTitle>

<div class="container">
    <div class="d-flex align-items-center mb-4">
        <button class="btn btn-outline-secondary me-3" @onclick="GoBack">
            <i class="bi bi-arrow-left"></i>
        </button>
        <h1><i class="bi bi-calendar-plus me-2"></i>Schedule New Trip</h1>
    </div>

    @if (errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <EditForm Model="model" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator/>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-tag me-1"></i>Trip Name *
                            </label>
                            <InputText class="form-control" @bind-Value="model.Name" placeholder="Enter trip name"/>
                            <ValidationMessage For="@(() => model.Name)" class="text-danger"/>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-text-paragraph me-1"></i>Notes
                            </label>
                            <InputTextArea class="form-control" @bind-Value="model.Description" rows="3"
                                           placeholder="Enter trip description"/>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-calendar me-1"></i>Scheduled Start Time *
                            </label>
                            <InputDate Type="InputDateType.DateTimeLocal" class="form-control"
                                       @bind-Value="model.ScheduledStartTime"/>
                            <ValidationMessage For="@(() => model.ScheduledStartTime)" class="text-danger"/>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-geo-alt me-1"></i>From Location *
                            </label>
                            <input type="text" class="form-control mb-2" @bind="model.FromLocationName"
                                   placeholder="Enter starting location name (e.g., Downtown Clinic)"/>
                            <MapPicker MapId="fromMap"
                                       Latitude="@model.FromLatitude"
                                       Longitude="@model.FromLongitude"
                                       Height="300px"
                                       OnLocationChanged="@OnFromLocationChanged"/>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-geo-alt-fill me-1"></i>To Location *
                            </label>
                            <input type="text" class="form-control mb-2" @bind="model.ToLocationName"
                                   placeholder="Enter destination name (e.g., City Hospital)"/>
                            <MapPicker MapId="toMap"
                                       Latitude="@model.ToLatitude"
                                       Longitude="@model.ToLongitude"
                                       Height="300px"
                                       OnLocationChanged="@OnToLocationChanged"/>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-truck me-1"></i>Vehicle
                            </label>
                            <select class="form-select" @bind="model.VehicleId" @bind:after="OnVehicleChanged">
                                <option value="">-- Select Vehicle (Optional) --</option>
                                @foreach (var vehicle in vehicles)
                                {
                                    <option value="@vehicle.Id">@vehicle.Name</option>
                                }
                            </select>
                            @if (selectedVehicle?.AssignedDrivers.Any() == true)
                            {
                                <small class="text-muted mt-1 d-block">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Assigned
                                    drivers: @string.Join(", ", selectedVehicle.AssignedDrivers.Select(d => $"{d.FirstName} {d.LastName}"))
                                </small>
                            }
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <button type="button" class="btn btn-outline-secondary" @onclick="GoBack">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </button>
                            <button type="submit" class="btn btn-primary btn-lg" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                    <span>Creating...</span>
                                }
                                else
                                {
                                    <i class="bi bi-check-circle me-1"></i>
                                    <span>Schedule Trip</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Trip Summary</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Name:</strong>
                        <p class="text-muted mb-0">@(string.IsNullOrEmpty(model.Name) ? "Not set" : model.Name)</p>
                    </div>
                    <div class="mb-3">
                        <strong>Scheduled:</strong>
                        <p class="text-muted mb-0">@model.ScheduledStartTime.ToString("MMM dd, yyyy HH:mm")</p>
                    </div>
                    <div class="mb-3">
                        <strong>From:</strong>
                        <p class="text-muted mb-0">@(string.IsNullOrEmpty(model.FromLocationName) ? "Not set" : model.FromLocationName)</p>
                        <small
                            class="text-muted">@model.FromLatitude.ToString("F6"), @model.FromLongitude.ToString("F6")</small>
                    </div>
                    <div class="mb-3">
                        <strong>To:</strong>
                        <p class="text-muted mb-0">@(string.IsNullOrEmpty(model.ToLocationName) ? "Not set" : model.ToLocationName)</p>
                        <small
                            class="text-muted">@model.ToLatitude.ToString("F6"), @model.ToLongitude.ToString("F6")</small>
                    </div>
                    <hr/>
                    <div class="alert alert-info mb-0">
                        <small>
                            <i class="bi bi-lightbulb me-1"></i>
                            <strong>Note:</strong> Vehicle and driver can be assigned later. The trip will be in
                            "Pending" status until approved.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private CreateTripDto model = new();
    private List<VehicleDto> vehicles = new();
    private List<UserDto> drivers = new();
    private List<UserDto> availableDrivers = new();
    private VehicleDto? selectedVehicle;
    private bool isSubmitting = false;
    private string? errorMessage;
    private string? selectedDriverId;
    private bool autoAssignedDriver = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Set default coordinates (Dar es Salaam, Tanzania)
            model.FromLatitude = -6.812647380814953;
            model.FromLongitude = 39.276215266217456;
            model.ToLatitude = -6.812647380814953;
            model.ToLongitude = 39.276215266217456;

            vehicles = await ApiService.GetVehiclesAsync();
            var allUsers = await ApiService.GetUsersAsync();
            drivers = allUsers.Where(u => u.Roles.Contains("Driver")).ToList();
            availableDrivers = drivers;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading data: {ex.Message}";
        }
    }

    private void OnVehicleChanged()
    {
        if (model.VehicleId.HasValue && model.VehicleId.Value > 0)
        {
            selectedVehicle = vehicles.FirstOrDefault(v => v.Id == model.VehicleId.Value);

            if (selectedVehicle?.AssignedDrivers.Any() == true)
            {
                // Show only assigned drivers for this vehicle
                availableDrivers = selectedVehicle.AssignedDrivers;

                // Auto-select first assigned driver
                var firstDriver = selectedVehicle.AssignedDrivers.First();
                selectedDriverId = firstDriver.Id;
                model.DriverId = Guid.Parse(firstDriver.Id);
            }
            else
            {
                // Show all drivers if no assigned drivers
                availableDrivers = drivers;
            }
        }
        else
        {
            selectedVehicle = null;
            availableDrivers = drivers;
            selectedDriverId = null;
            model.DriverId = null;
        }
    }

    private void OnFromLocationChanged((double Latitude, double Longitude) coords)
    {
        model.FromLatitude = coords.Latitude;
        model.FromLongitude = coords.Longitude;
    }

    private void OnToLocationChanged((double Latitude, double Longitude) coords)
    {
        model.ToLatitude = coords.Latitude;
        model.ToLongitude = coords.Longitude;
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSubmitting = true;
            errorMessage = null;

            // Validate coordinates
            if (model.FromLatitude == 0 && model.FromLongitude == 0)
            {
                errorMessage = "Please select a starting location on the map";
                return;
            }

            if (model.ToLatitude == 0 && model.ToLongitude == 0)
            {
                errorMessage = "Please select a destination on the map";
                return;
            }

            // Update DriverId from selected value
            if (!string.IsNullOrEmpty(selectedDriverId) && Guid.TryParse(selectedDriverId, out var driverId))
            {
                model.DriverId = driverId;
            }
            else
            {
                model.DriverId = null;
            }

            // Collect telemetry
            model.Telemetry = await TelemetryService.CollectTelemetryAsync();

            await ApiService.CreateTripAsync(model);
            Navigation.NavigateTo("/trips");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error creating trip: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/trips");
    }

}
