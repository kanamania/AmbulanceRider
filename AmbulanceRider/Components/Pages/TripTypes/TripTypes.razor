@page "/triptypes"
@using AmbulanceRider.Models
@using AmbulanceRider.Services
@using Microsoft.AspNetCore.Authorization
@inject IApiService ApiService
@inject NavigationManager Navigation
@attribute [Authorize(Roles = "Admin,Dispatcher")]

<PageTitle>Trip Types</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="bi bi-tags me-2"></i>Trip Types
        </h1>
        <button class="btn btn-primary" @onclick="NavigateToCreate">
            <i class="bi bi-plus-circle me-1 create-btn"></i>Create Trip Type
        </button>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading trip types...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
        </div>
    }
    else if (!tripTypes.Any())
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle me-2"></i>
            No trip types found. Click "Create Trip Type" to add one.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var tripType in tripTypes.OrderBy(t => t.DisplayOrder))
            {
                <div class="col">
                    <div class="card h-100 @(tripType.IsActive ? "" : "opacity-75")">
                        <div class="card-header d-flex align-items-center" style="background-color: @(tripType.Color ?? "#6c757d")20; border-left: 4px solid @(tripType.Color ?? "#6c757d")">
                            @if (!string.IsNullOrEmpty(tripType.Icon))
                            {
                                <i class="bi bi-@tripType.Icon me-2" style="color: @(tripType.Color ?? "#6c757d"); font-size: 1.5rem;"></i>
                            }
                            <div class="flex-grow-1">
                                <h5 class="card-title mb-0">@tripType.Name</h5>
                                @if (!tripType.IsActive)
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </div>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(tripType.Description))
                            {
                                <p class="card-text text-muted small">@tripType.Description</p>
                            }
                            
                            <div class="mb-2">
                                <strong>Attributes:</strong>
                                <span class="badge bg-primary">@tripType.Attributes.Count</span>
                            </div>

                            @if (tripType.Attributes.Any())
                            {
                                <div class="small">
                                    @foreach (var attr in tripType.Attributes.OrderBy(a => a.DisplayOrder).Take(3))
                                    {
                                        <div class="mb-1">
                                            <i class="bi bi-dot"></i>
                                            <span class="text-muted">@attr.Label</span>
                                            @if (attr.IsRequired)
                                            {
                                                <span class="text-danger">*</span>
                                            }
                                        </div>
                                    }
                                    @if (tripType.Attributes.Count > 3)
                                    {
                                        <div class="text-muted fst-italic">
                                            +@(tripType.Attributes.Count - 3) more...
                                        </div>
                                    }
                                </div>
                            }

                            <div class="mt-3 small text-muted">
                                <i class="bi bi-calendar me-1"></i>
                                Created: @tripType.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100" role="group">
                                <button class="btn btn-sm btn-outline-primary" @onclick="() => NavigateToEdit(tripType.Id)">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => ConfirmDelete(tripType)">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@* Delete Confirmation Modal *@
@if (tripTypeToDelete != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" @onclick="CancelDelete"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the trip type <strong>@tripTypeToDelete.Name</strong>?</p>
                    @if (tripTypeToDelete.Attributes.Any())
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            This will also delete <strong>@tripTypeToDelete.Attributes.Count</strong> attribute(s).
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteTripType" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<TripTypeDto> tripTypes = new();
    private bool isLoading = true;
    private string? errorMessage;
    private TripTypeDto? tripTypeToDelete;
    private bool isDeleting = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadTripTypes();
    }

    private async Task LoadTripTypes()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            tripTypes = await ApiService.GetTripTypesAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading trip types: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/triptypes/create");
    }

    private void NavigateToEdit(int id)
    {
        Navigation.NavigateTo($"/triptypes/edit/{id}");
    }

    private void ConfirmDelete(TripTypeDto tripType)
    {
        tripTypeToDelete = tripType;
    }

    private void CancelDelete()
    {
        tripTypeToDelete = null;
    }

    private async Task DeleteTripType()
    {
        if (tripTypeToDelete == null) return;

        try
        {
            isDeleting = true;
            await ApiService.DeleteTripTypeAsync(tripTypeToDelete.Id);
            tripTypes.Remove(tripTypeToDelete);
            tripTypeToDelete = null;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting trip type: {ex.Message}";
        }
        finally
        {
            isDeleting = false;
        }
    }
}
