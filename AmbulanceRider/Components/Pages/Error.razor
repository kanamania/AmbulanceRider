@page "/Error"
@inject NavigationManager NavigationManager

<PageTitle>Error</PageTitle>

<div class="error-container">
    <div class="error-content">
        <div class="error-icon">
            <i class="bi bi-exclamation-triangle-fill"></i>
        </div>
        <h1 class="text-danger">Oops! Something went wrong</h1>
        <p class="lead">We're sorry, but we've encountered an error while processing your request.</p>

        @if (ShowRequestId)
        {
            <div class="error-details">
                <p><strong>Error ID:</strong> <code>@ErrorId</code></p>
                @if (!string.IsNullOrEmpty(ErrorDetails))
                {
                    <div class="error-stack">
                        <details>
                            <summary>Error Details</summary>
                            <pre>@ErrorDetails</pre>
                        </details>
                    </div>
                }
            </div>
        }

        <div class="error-actions">
            <button class="btn btn-primary" @onclick="GoBack">
                <i class="bi bi-arrow-left"></i> Go Back
            </button>
            <button class="btn btn-outline-secondary" @onclick="GoHome">
                <i class="bi bi-house"></i> Go to Home
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string? ErrorId { get; set; }

    [Parameter]
    public string? ErrorDetails { get; set; }

    private bool ShowRequestId => !string.IsNullOrEmpty(ErrorId);

    protected override void OnInitialized()
    {
        // Generate a unique error ID if not provided
        ErrorId ??= $"ERR-{DateTimeOffset.UtcNow.ToUnixTimeSeconds()}";
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("");
    }

    private void GoHome()
    {
        NavigationManager.NavigateTo("/");
    }
}